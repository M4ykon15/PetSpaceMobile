<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:id="@+id/cardAnimais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_card_dog">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_cardAnimais"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_email"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nome_card"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Rex"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="30"
                android:layout_marginStart="83dp"
                android:layout_alignParentTop="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/raca_card"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Caramelo"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="30"
                android:layout_marginStart="83dp"
                android:layout_below="@id/nome_card"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/idade_card"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="6 anos"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="30"
                android:layout_marginStart="83dp"
                android:layout_below="@id/raca_card"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/moreInfo_card"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_marginEnd="60dp"
                android:text="Mais Informações"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/gener_card"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gener_card"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_male"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>